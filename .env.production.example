# 프로덕션 환경 설정 예시 (.env.production)
# 클라우드타입 배포 시 환경변수로 설정하세요

# Django 기본 설정
SECRET_KEY=your-super-secret-key-here
DEBUG=False
ENVIRONMENT=production

# 호스트 설정 (클라우드타입에서 자동 감지됨)
# CLOUDTYPE_HOST는 클라우드타입에서 자동으로 설정됩니다
ALLOWED_HOSTS=your-domain.cloudtype.app,.cloudtype.app

# 데이터베이스 설정 (필요한 경우)
# DATABASE_URL=mysql://user:password@host:port/database

# CORS 설정 (프론트엔드 도메인)
CORS_ALLOWED_ORIGINS=https://your-frontend.com,https://your-admin.com

# CSRF 신뢰 도메인
CSRF_TRUSTED_ORIGINS=https://your-domain.cloudtype.app,https://your-frontend.com

# API Keys
OPENAI_API_KEY=your-openai-api-key
KAKAO_API_KEY=your-kakao-api-key

# 보안 설정 (프로덕션에서 권장)
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
